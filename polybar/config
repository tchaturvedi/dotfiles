[module/spotipy]
type = custom/script
exec =  python3 ~/.config/polybar/scripts/spoti.py
exec-if = pgrep spotify > /dev/null
interval = 0.01
click-left = playerctl -p spotify play-pause

[module/playpause]
type = custom/script
exec = python3 ~/.config/polybar/scripts/playpause.py
interval = 0.01
click-left = playerctl -p spotify play-pause

